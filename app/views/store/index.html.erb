<div id="wrapper">
  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        YOUR CART
      </li>
      <div id="cart">
        <% if not @cart.nil? %>
          <%= render @cart %>
        <% else %>
          <table class="table table-sm table-dark">
            <th>Your cart is empty!</th>
          </table>
        <% end %>
      </div>
      <% if not @cart.nil? and @cart.line_items.count != 0 %>
        <div class="container">
          </br>
          <center>
            <%= button_to 'Checkout', new_order_path, method: :get,
                          :type => "button",
                          :class => "btn btn-outline-secondary btn-sm"%>
            </br>
            <%= button_to 'Empty cart', @cart, method: :delete,
                          data: {confirm: 'Are you sure?'},
                          :class => "btn btn-outline-secondary btn-sm" %>
            </br>
            <%= link_to 'Cart Page', @cart, :role => "button",
                        :class => "btn btn-outline-secondary btn-sm" %>
          </center>
        </div>
      <% end %>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">

    <div id="main">
      <!-- Page Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <h1 class="my-4">Flymin's bookstore</h1>
            <div class="list-group">
              <a href="#" class="list-group-item">Category 1</a>
              <a href="#" class="list-group-item">Category 2</a>
              <a href="#" class="list-group-item">Category 3</a>
              <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">View Cart</a></div>
          </div>
          <!-- /.col-lg-3 -->
          <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                  <img class="d-block img-fluid" src="https://s1.ax1x.com/2018/12/27/FRu31e.png" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="https://s1.ax1x.com/2018/12/27/FRuQfO.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="https://s1.ax1x.com/2018/12/27/FRu1pD.png" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span></a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span></a>
            </div>
            <div class="alert alert-secondary" role="alert">
              <%= notice %></div>
            <div class="row">
              <% cache @products do %>
                <% @products.each do |product| %>
                  <% cache product do %>
                    <div class="col-lg-4 col-md-6 mb-4">
                      <div class="card h-100">
                        <a href="#">
                          <%= image_tag product.image_url, class: "card-img-top", alt: "" %></a>
                        <div class="card-body">
                          <h5 class="card-title">
                            <a href="#">
                              <%= product.title %></a>
                          </h5>
                          <h6>
                            <%= number_to_currency(product.price) %></h6>
                          <p class="card-text">
                            <%= sanitize(product.description) %></p>
                        </div>
                        <div class="card-footer">
                          <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
                          <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.col-lg-9 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container -->
    </div>
  </div>
  <!-- /#page-content-wrapper -->
  <!-- Menu Toggle Script -->
  <script>$("#menu-toggle").click(function (e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });
  </script>
</div>
